<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Opción 1 -->
    <ImageView
        android:id="@+id/row01"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:contentDescription="none"
        android:src="@drawable/keyicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/option01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:text="@string/close_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row01"
        app:layout_constraintTop_toTopOf="@id/row01"
        app:layout_constraintBottom_toBottomOf="@id/row01"/>

    <!-- Opción 2 -->
    <ImageView
        android:id="@+id/row02"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:contentDescription="none"
        android:src="@drawable/usericon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row01"/>

    <TextView
        android:id="@+id/option02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:text="@string/my_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row02"
        app:layout_constraintTop_toTopOf="@id/row02"
        app:layout_constraintBottom_toBottomOf="@id/row02"/>

    <!-- Opción 3 -->
    <ImageView
        android:id="@+id/row03"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:contentDescription="none"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row02"/>

    <TextView
        android:id="@+id/option03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row03"
        app:layout_constraintTop_toTopOf="@id/row03"
        app:layout_constraintBottom_toBottomOf="@id/row03"/>

</androidx.constraintlayout.widget.ConstraintLayout>